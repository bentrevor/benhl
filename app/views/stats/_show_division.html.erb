
<h3 class="division_title"><%= division_name %></h3>

<table id="<%= division_name.split[0].downcase %>_table">
  <tr class="no-sort">
    <th>Name</th>
    <th>Points</th>
    <th>Wins</th>
    <th>Losses</th>
    <th>OT Losses</th>
    <th>Goals For</th>
    <th>Goals Against</th>
    <th>Goal Diff</th>
    <th>Last 10</th>
  </tr>

  <% teams.each do |team| %>
    <tr>
      <td><%= "#{team.city} #{team.name}" %></td>
      <td><%= team.points %></td>
      <td><%= team.wins %></td>
      <td><%= team.losses %></td>
      <td><%= team.ot_losses %></td>
      <td><%= team.goals_for %></td>
      <td><%= team.goals_against %></td>
      <td><%= team.goal_diff %></td>
      <td>
        <% team.show_last_10.split('').each do |l| %>
          <div class="last_10 last_10_<%= l.downcase %>"><span><%= l %></span></div>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
