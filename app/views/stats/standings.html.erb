<%= form_tag("/standings", method: "get") do %>
  <%= label_tag "Season" %>
  <%= select_tag :season, options_for_select([['2014', 2014], ['2015', 2015]]) %>

  <%= label_tag "Last N" %>
  <%= text_field_tag :last_n %>

  <%= label_tag "Start Date" %>
  <%= text_field_tag :start_date %>

  <%= label_tag "End Date" %>
  <%= text_field_tag :end_date %>

  <%= submit_tag %>
<% end %>

<h1 class="season_title"><%= "#{@season[0]}-#{@season[1]} Season" %></h1>

<% @teams.keys.each do |scope| %>
  <%= render partial: "standings_table", locals: { title: @titles[scope], teams: @teams[scope] } %>
<% end %>
